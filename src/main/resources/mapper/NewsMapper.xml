<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="resource.NewsMapper">
	<!-- 뉴스 타이틀  출력 -->
	<select id="allTitle" resultType="vo.NewsVO">
		select title from newstmp;
	</select>
	<!-- 뉴스 타이틀  출력 -->
	<select id="selectTitle" resultType="vo.NewsVO">
		select title from news_test;
	</select>

	<select id="searchKeyWord" resultType="vo.NewsVO">
		select title contents from news_test where keyword like '%'||#{keyword}||'%
	
	</select>
	<select id="readNews" parameterType="vo.NewsVO" resultType="vo.NewsVO">
		select * from newstmp where title=#{title}
	</select>
</mapper>